PROCEDURE PieBASE 0DIM in$:STRING[1]DIM d(100):REALDIM x3,x4,y3,y4:INTEGERDIM a,r1,r2,an,ao,a2,x1,x2,y1,y2,t:REALDIM c,y:INTEGERDIM rd:INTEGERPRINT CHR$(12); PRINT TAB(7); "Pie Chart Generator"PRINT TAB(8); "For OS-9 Level 1"PRINT PRINT TAB(10); "By Jim Gerrie"PRINT PRINT PRINT "Enter values for the pieces and then enter 9999 to end the list.The chart will be displayed.    Press space bar to save image toa file called PIECHART.PIC in   the current working directory."PRINT "Enter 0 to abort list, or press Q to abort save operation."c=1d(0)=0WHILE d(c-1)<>9999. AND c<100 DO PRINT "Enter value "; c; INPUT d(c)IF d(c)=0 THEN 104c=c+1ENDWHILE a=0ad=0x1=128x2=0y1=100y2=0rd=77r1=rd/2r2=5t=0ao=0an=0a2=0RUN GFX("MODE",0,2)RUN GFX("COLOR",1)RUN GFX("CLEAR")PRINT CHR$(29)RUN GFX("COLOR",0)c=1WHILE d(c)<>9999 DO t=t+d(c)c=c+1ENDWHILE IF t=0 THEN t=.0001ENDIF c=c-2ao=ad/3.6FOR y=1 TO cx3=x1y3=y1RUN GFX("CIRCLE",x3,y3,rd)IF FIX(d(y)/t*100)=0 THEN 98an=aoa1=aoGOSUB 100RUN GFX("LINE",x3,y3,x4,y4)an=100*(d(y)/t)+aoao=ana2=anGOSUB 100RUN GFX("LINE",x3,y3,x4,y4)an=a1+(a2-a1)/298 NEXT yin$=""WHILE in$="" DO RUN INKEY(in$)ENDWHILE IF in$<>" " THEN 104GOTO 102100 a=an/57.141*3.6x2=x1+SIN(a)*rdy2=y1-COS(a)*rdx3=x1x4=x2y3=y1y4=y2RETURN 102 SHELL "gsave PIECHART.PIC"104 RUN GFX("ALPHA")RUN GFX("QUIT")END 